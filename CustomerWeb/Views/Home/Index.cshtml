@model List<CustomerWeb.Models.DB.Customer>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="btn-group">
        <a asp-controller="Home" asp-action="CustomerDesc" type="button" class="btn btn-primary">
            Yeni Kayıt
        </a>
        <button type="button" class="btn btn-primary" id="btnOpen">Aç</button>
        <button type="button" class="btn btn-primary" id="btnDelete">Sil</button>
        <input type="hidden" id="custId" name="custId" >
    </div>
    <div class="panel panel-default">
        <table class="table">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Adı</th>
                    <th>Vergi Numarası</th>
                    <th>Kuruluş Tarihi</th>
                    <th>Telefon Numarası</th>
                    <th>Adresi</th>
                    <th>İl</th>
                    <th>İlçe</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.TaxId</td>
                    <td>@item.CreateDate</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Address</td>
                    <td>@item.City</td>
                    <td>@item.Town</td>
                </tr>
                }
        </table>
    </div>
</div>
<style>
    table tbody tr:hover {
        background-color: orange;
        cursor: pointer;
    }
    table tr.selected {
        background-color: #e92929 !important;
        color: #fff;
        vertical-align: middle;
        padding: 1.5em;
    }
</style>

@section scripts{
    <script>
        $(document).ready(function () {
            $('table tbody tr').click(function () {
                $('.selected').removeClass('selected');
                $(this).addClass("selected");
                
                var currentRow = $(this).closest("tr");

                var col1 = currentRow.find("td:eq(0)").text();
              
                $("#custId").val(col1);

            });

            $("#btnOpen").click(function () {
               
                if ($("#custId").val().length>0) {
                    window.location.href = "/Home/CustomerDesc?Id=" + $("#custId").val();
                }
                else {
                    alert("Lütfen Seçim yapın"); 
                }
              
            });

            $("#btnDelete").click(function () {
                $.ajax({
                    url: "/Home/DeleteCustomer",
                    dataType: 'json',
                    type: 'POST',
                    data: { Id: $("#custId").val()},
                }).done(function (result) {
                    if (result) {
                        alert("Kayıt Silindi");
                        window.location.reload();
                    }
                    else {
                        alert("Kayıt silinemedi");
                    }
                        1
                });//Ajax method                

            });

        });//document ready 
    </script>

} 